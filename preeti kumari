}
void carona :: entertainment() {
    cout << "WORK IN PROGESS" <<endl;
}




int main()
{
    carona obj;
    int ch;
    do
    {
    cout<< "\n1) TOTAL CASE OF CARONA VIRUS IN WORLD" <<endl;
    cout<< "2) TOTAL CASE OF CARONA VIRUS IN INDIA" <<endl;
    cout<< "3) RECOVER CASE OF CARONA VIRUS IN WORLD" <<endl;
    cout<< "4) DEATH CASE OF CARONA VIRUS IN WORLD" <<endl;
    cout<< "5) RECOVER CASE OF CARONA VIRUS IN INDIA" <<endl;
