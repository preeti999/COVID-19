    cout<< "7) LATEST NEWS RELATED TO CARONA VIRUS" <<endl;
    cout<< "8) EXIT" << endl;

    cin >> ch;
    switch(ch)
    {
     case 1:

         cout <<" TOTAL CASE OF CARONA VIRUS IN WORLD " << endl;
     obj.world_case();
     break;

     case 2:
         cout <<" TOTAL CASE OF CARONA VIRUS IN INDIA" <<endl;
     obj.india_case();
     break;

     case 3:
         cout << " TOTAL RECOVER CASE OF CARONA VIRUS IN WORLD"<< endl;
     obj.recover_world();
