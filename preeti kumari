         cout <<" TOTAL DEATH CASES OF CARONA VIRUS IN INDIA" << endl;
     obj.death_india();
     break;

     case 7:
         cout <<" LATEST NEWS RELATED TO CARONA VIRUS" << endl;

     obj.news();
